# Domain / TLS
DOMAIN=example.com
DASHBOARD_URL=https://proxy.example.com
LETSENCRYPT_EMAIL=admin@example.com

# Pangolin
SERVER_SECRET=change-me-super-secret-key
PANGOLIN_API_PORT=3000
PANGOLIN_INTERNAL_PORT=3001
PANGOLIN_DASHBOARD_PORT=3002
PANGOLIN_INTEGRATION_PORT=3003
API_KEY=your_pangolin_api_key_here

# PostgreSQL
POSTGRES_DB=pangolin
POSTGRES_USER=pangolin
POSTGRES_PASSWORD=your_secure_password_here

# Feature flags
REQUIRE_EMAIL_VERIFICATION=false
DISABLE_SIGNUP_WITHOUT_INVITE=false
DISABLE_USER_CREATE_ORG=false
ENABLE_INTEGRATION_API=true
ALLOW_RAW_RESOURCES=true

# Email
EMAIL_ENABLED=false

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS_PER_MINUTE=60

# DNS challenge (Porkbun)
DNS_PROVIDER=porkbun
DNS_API_KEY=
DNS_API_KEY_SECRET=
